<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.SocialCat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cor de Fundo -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <!-- Cor Primária e Acentuada -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Texto -->
        <item name="android:textColor">@color/colorTextPrimary</item>
        <!-- Botões -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
        <item name="android:buttonTint">@color/colorAccent</item>
    </style>
    <style name="Theme.SocialCat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SocialCat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
